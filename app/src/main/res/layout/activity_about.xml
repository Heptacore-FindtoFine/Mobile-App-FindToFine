<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.navbar.profile.aboutapp.AboutActivity">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_marginTop="46dp"
            android:layout_marginLeft="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tvTitle"/>

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logoapp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appLogo"/>

        <TextView
            android:id="@+id/tvFindToFine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="@string/app_name"
            android:textColor="@color/hijau2"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

        <TextView
            android:id="@+id/tvSubtitleWelcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="8dp"
            android:text="@string/subtitle_welcome"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:maxLines="9"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFindToFine"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvWhatDoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What Does"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitleWelcome"/>

        <TextView
            android:id="@+id/tvFindToFine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="@string/app_name"
            android:textColor="@color/hijau2"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWhatDoes" />

        <TextView
            android:id="@+id/tvOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="110dp"
            android:text="Offer?"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/tvFindToFine2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWhatDoes" />

        <TextView
        android:id="@+id/tvSubtitleWhatDoes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="8dp"
        android:text="@string/subtittle_what_does"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:maxLines="9"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFindToFine2"
        app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvKeyFeatures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Features"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitleWhatDoes"/>

        <ImageView
            android:id="@+id/ivPhotoBased"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/about_photo_based"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvKeyFeatures"/>

        <ImageView
            android:id="@+id/ivCloudSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/about_cloud_sync"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="70dp"
            app:layout_constraintStart_toStartOf="@id/ivPhotoBased"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvKeyFeatures"/>

        <ImageView
            android:id="@+id/ivFamily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/about_family"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivPhotoBased"/>

        <ImageView
            android:id="@+id/ivPersonalList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/about_personal_list"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="70dp"
            app:layout_constraintStart_toStartOf="@id/ivFamily"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivPhotoBased"/>

        <TextView
            android:id="@+id/tvWhyChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Why Choose"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivFamily"/>

        <TextView
            android:id="@+id/tvFindToFine3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="@string/app_name"
            android:textColor="@color/hijau2"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWhyChoose" />

        <TextView
            android:id="@+id/tvSubtitleWhyChoose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="8dp"
            android:text="@string/subtittleWhyChoose"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:maxLines="7"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFindToFine3"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvStartYourJourney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Your Journey"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitleWhyChoose"/>

        <TextView
            android:id="@+id/tvWith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_marginLeft="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStartYourJourney"/>

        <TextView
            android:id="@+id/tvFindToFine4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="@string/app_name"
            android:textColor="@color/hijau2"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tvWith"
            app:layout_constraintTop_toBottomOf="@id/tvStartYourJourney" />

        <TextView
            android:id="@+id/tvSubtitleStartYourJourney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="8dp"
            android:text="@string/subtittle_start"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:maxLines="7"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWith"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvMeetOurTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meet Our Team"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitleStartYourJourney"/>
        
        <androidx.cardview.widget.CardView
            android:id="@+id/cvIvan"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="50dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/cvKus"
            app:layout_constraintTop_toBottomOf="@id/tvMeetOurTeam">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ppIvan"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_person_24"
                    android:layout_gravity="center"
                    app:civ_border_color="@color/hijau2"
                    app:civ_border_width="2dp"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muhammad Reza Ivano Pahlevi"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile DeveLopment"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvKus"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="50dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="@id/cvIvan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMeetOurTeam">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ppKus"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_person_24"
                    android:layout_gravity="center"
                    app:civ_border_color="@color/hijau2"
                    app:civ_border_width="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kus Dwi Prastyo"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile DeveLopment"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>